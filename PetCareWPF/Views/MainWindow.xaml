                <DataGrid>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Pet Name" Binding="{Binding PetName}" Width="*"/>
                        <DataGridTextColumn Header="Owner" Binding="{Binding OwnerName}" Width="*"/>
                        <DataGridTextColumn Header="Appointment Date" Binding="{Binding AppointmentDate}" Width="*"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
            -->
    </Grid>
</Window>
