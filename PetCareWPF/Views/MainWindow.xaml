<Window x:Class="PetCareWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetCareWPF" xmlns:viewmodels="clr-namespace:PetCareWPF.ViewModels"
        mc:Ignorable="d"
        Title="Pet Care Clinic" Height="720" Width="1280">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <!-- Sidebar Navigation -->
        <StackPanel Grid.Column="0" Background="#2C3E50" Width="200">
            <Button Content="Home" Margin="10" Padding="10" Foreground="White" Background="#34495E" BorderBrush="Transparent" Command="{Binding HomeViewCommand}" />
            <Button Content="Pets" Margin="10" Padding="10" Foreground="White" Background="#34495E" BorderBrush="Transparent" Command="{Binding PetsViewCommand}" />
            <Button Content="Customers" Margin="10" Padding="10" Foreground="White" Background="#34495E" BorderBrush="Transparent" Command="{Binding CustomersViewCommand}" />
            <Button Content="Appointments" Margin="10" Padding="10" Foreground="White" Background="#34495E" BorderBrush="Transparent" Command="{Binding AppointmentsViewCommand}" />
            <Button Content="Invoice" Margin="10" Padding="10" Foreground="White" Background="#34495E" BorderBrush="Transparent" Command="{Binding InvoiceViewCommand}" />
            <Button Content="Staff" Margin="10" Padding="10" Foreground="White" Background="#34495E" BorderBrush="Transparent" Command="{Binding StaffViewCommand}" />
            <Button Content="Treatments" Margin="10" Padding="10" Foreground="White" Background="#34495E" BorderBrush="Transparent" Command="{Binding TreatmentsViewCommand}" />
            <Button Content="Medication" Margin="10" Padding="10" Foreground="White" Background="#34495E" BorderBrush="Transparent" Command="{Binding MedicationViewCommand}" />
        </StackPanel>
        <!-- Filter pane -->
        <StackPanel Grid.Column="1" Background="#ECF0F1" Width="200">
            <TextBlock Text="Filters" FontWeight="Bold" Margin="10"/>
            <CheckBox Content="Show Only Active Pets" Margin="10"/>
            <CheckBox Content="Show Only Upcoming Appointments" Margin="10"/>
            <CheckBox Content="Show Only Unpaid Invoices" Margin="10"/>
        </StackPanel>
        <!-- Main dynamic content area -->
        <ContentControl Grid.Column="2" Margin="10" Content="{Binding CurrentView}" />
        <!--<TextBlock Text="Welcome to Pet Care Clinic Management System" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            <TextBlock Text="Select an option from the left menu to get started." FontSize="16"/>-->
            <!-- Dynamic showing of content from the buttons -->
            
            <!-- Testing DataGrid for Appointments (to be replaced with dynamic content)
